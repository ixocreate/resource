{
    "name": "ixocreate/resource-package",
    "description": "IXOCREATE Resource Package",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "IXOCREATE",
            "email": "opensource@ixocreate.com",
            "homepage": "https://www.ixocreate.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2 || ^8.0",
        "ixocreate/application": "dev-develop",
        "ixocreate/database-package": "dev-develop",
        "ixocreate/template-package": "dev-develop"
    },
    "require-dev": {
        "ixocreate/coding-standard": "^2.0",
        "ixocreate/test": "^0.1.0"
    },
    "autoload": {
        "psr-4": {
            "Ixocreate\\Resource\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ixocreate\\Misc\\Resource\\": "tests/misc/",
            "Ixocreate\\Test\\Resource\\": "tests/src/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "fix-cs": "vendor/friendsofphp/php-cs-fixer/php-cs-fixer fix --config vendor/ixocreate/coding-standard/.php_cs"
    }
}
